<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="Jay Jay Web Components">
  <meta name="theme-color" content="#7da3ef">
  <!-- TODO: Need to add a custom function to use variables in header with handlebars-->
  <title>Input Number - Web Component</title>
  <!-- Bootstrap core CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link rel="stylesheet" href="../resources/css/main.css">
   <!-- Import Components JS-->
    <script src="../resources/js/jj-input-number.js"></script>
</head>

<body data-spy="scroll" data-target="#contentHeadings" data-offset="140">
  <div class="container">
    <!-- Navbar Partial-->
    {{> navbar lang='en' PageName='jj input number'}}

    <div class="container page">
      <div class="row">
        <div class="col-sm-2 sidebar-left-wrapper">
          <!-- Pass in the page name for highlighting--->
          {{> left_sidebar PageName='jj input number' Version='0.01'}}
        </div>
        <div class="col-sm-8 content">
          <h1 id="h1">{{ComponentName}}</h1>
          <p>{{Description}}</p>
          <h2 id="h2">Usage</h2>
         
          <p><jj-input-number min=0 max=8 value=1 precision=2 step=0.5></jj-input-number></p>
          <h2 id="h2">Attributes</h2>
           <!-- Attribute Table--> 
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Attribute Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Type</th>
                        <th scope="col">Accepted Values</th>
                        <th scope="col">Default Value</th>
                    </tr>
                </thead>
            {{#each Attributes}}
            <tr>
            <th >{{this.AttributeName}}</th>
            <th>{{this.AttributeDescription}}</th>
            <th>{{this.AttributeType}}</th>
            <th>{{this.AttributeAcceptedValues}}</th>
            <th>{{this.AttributeDefault}}</th>
            </tr>
            {{/each}}
            </table>

        </div>
        <div class="col-sm-2 sidebar-left-wrapper">

          <!-- Right Sidebar -->
          <nav id="contentHeadings" class="sidebar-right">
            <ul class="nav nav-pills flex-column">
              <li class="sideR nav-item">
                <a class="nav-link" href="#h1">
                  Overview
                </a>
              </li>
              <li class="sideR nav-item">
                <a class="nav-link" href="#h2">
                  Usage
                </a>
              </li>
              <li class="sideR nav-item">
                <a class="nav-link" href="#h3">
                  Attributes
                </a>
              </li>
            </ul>
          </nav>
          <!-- End Right Sidebar -->
        </div>
      </div>
    </div>

    {{> footer }}

    <!-- JS files at bottom of page -->
    <!-- Bootstrap core JavaScript-->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
      integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
      crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"></script>
    <script>
      jQuery(window).scroll(function () {
        //hide left fixed sidebar if current screen reached footer
        var currentScroll = jQuery(document).height() - jQuery(this).scrollTop() - jQuery(this).height();
        if (currentScroll > 230) {
          jQuery('.sidebar-left').css('bottom', '0');
          jQuery('.sidebar-left').css('top', '0');
        } else {
          jQuery('.sidebar-left').css('bottom', '300px');
          jQuery('.sidebar-left').css('top', '0px');
        }
      });
    </script>
  </div>
</body>

</html>